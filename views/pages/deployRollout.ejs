<head>
    <%- include('../partials/head'); %>
</head>
<header>
    <%- include('../partials/header'); %>
</header>
<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" action="/deploy">
                <div class="row">
                    <div class="col">
                        <form method="post" action="/onchange">
                        <select class="form-control site" name="site" id="site">
                            <option value="">Select Site</option>
                            <% for(var i=0; i < siteList.length; i++) { %>
                                <option value='<%= siteList[i].id %>'>
                                    <%= siteList[i].name %>
                                </option>
                                <%}%>
                        </select>
                        </form>
                    </div>
                    <div class="col">
                        <select class="form-control environment" name="environment" id="environment">
                            
                        </select>
                    </div>
                    <div class="col">
                        <input type="submit" class="btn btn-info" value="Deploy Script">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<footer>
    <%- include('../partials/footer'); %>
</footer>