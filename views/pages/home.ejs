<head>
  <%- include('../partials/head'); %>
</head>
<header>
  <%- include('../partials/header'); %>
</header>

<section class="step-container my-3">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="col-md-8">
        <div class="wizard">
          <div class="wizard-inner">
            <div class="connecting-line"></div>
            <ul class="nav nav-tabs step-nav" role="tablist">
              <li role="presentation" id="step1" class="active">
                <a
                  role="tab"
                  aria-expanded="true"
                  ><span class="round-tab">1 </span> <i>Branches</i></a
                >
              </li>
              <li role="presentation" id="step2" class="disabled">
                <a
                  role="tab"
                  aria-expanded="false"
                  ><span class="round-tab">2</span> <i>Commits</i></a
                >
              </li>
              <li role="presentation" id="step3" class="disabled">
                <a
                  role="tab"
                  ><span class="round-tab">3</span> <i>Files</i></a
                >
              </li>
              <li role="presentation" id="step4" class="disabled">
                <a
                  role="tab"
                  ><span class="round-tab">4</span> <i>Rollout</i></a
                >
              </li>
              <li role="presentation" id="step5" class="disabled">
                <a
                  role="tab"
                  ><span class="round-tab">5</span> <i>Deploy Script</i></a
                >
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <div class="row">
    <div class="col card p-0">
      <% if (success_msg !='' ) { %>
        <div class="mt-5 mb-3">
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= success_msg %><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
        <% } %>
      <table class="table table-striped table-bordered text-center mb-0">
        <thead class="table-dark">
          <th>S.No.</th>
          <th>Branch Name</th>
          <th>Commits</th>
        </thead>
        
          <% for(var i=0; i < response.length; i++) { %>
            <tr>
              <td>
                <%= i + 1 %>
              </td>
              <td>
                <%= response[i].name %>
              </td>
              <td>
                <a href="./commits?branch=<%= response[i].name %>" class="link-primary">View Commits</a>
              </td>
            </tr>
            <%}%>
        </table>
      </div>
      <!-- <div class="col">
        <input type="submit" class="btn btn-info" value="Get Branches">
      </div> -->
    </div>
 
</div>

  <%- include('../partials/footer'); %>