<head>
    <%- include('../partials/head'); %>
</head>
<header>
    <%- include('../partials/header'); %>
</header>
<div class="container">
    <div class="row">
        <div class="col card p-0">
            <% if (success_msg !='' ) { %>
                <div class="mt-5 mb-3">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%= success_msg %><button type="button" class="btn-close" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                </div>
                <% } %>
                    <table class="table table-striped table-bordered text-center mb-0">
                        <thead class="table-dark">
                            <th>Sr.No.</th>
                            <th>File Name</th>
                            <th>Additions</th>
                            <th>Deletions</th>
                            <th>Changes</th>
                            <th>Action</th>
                        </thead>

                        <% for(var i=0; i < changedFiles?.files?.length; i++) { %>
                            <tr>
                                <td>
                                    <%= i + 1 %>
                                </td>                                
                                <td>
                                    <%= changedFiles.files[i].filename %>
                                </td>                                
                                <td>
                                    <%= changedFiles.files[i].status %>
                                </td>
                            </tr>
                            <%}%>
                    </table>
                    <form method="post" class="mt-3 ms-3" action="/">
                        <input type="submit" class="btn btn-info" value="Create Rollout">
                    </form>
                  
        </div>
    </div>