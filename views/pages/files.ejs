<head>
    <%- include('../partials/head'); %>
</head>
<header>
    <%- include('../partials/header'); %>
</header>
<div class="container">
    <div class="row">
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th>Sr.No.</th>
                    <th>File SHA Key</th>
                    <th>File Name</th>
                    <th>Additions</th>
                    <th>Deletions</th>
                    <th>Changes</th>
                    <th></th>
                </tr>

                <% for(var i=0; i < changedFiles?.files?.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= changedFiles.files[i].sha %>
                        </td>
                        <td>
                            <%= changedFiles.files[i].filename %>
                        </td>
                        <td>
                            <%= changedFiles.files[i].additions %>
                        </td>
                        <td>
                            <%= changedFiles.files[i].deletions %>
                        </td>
                        <td>
                            <%= changedFiles.files[i].changes %>
                        </td>
                        <td><a href="./createFile?fileName=<%= changedFiles.files[i].filename %>"
                                class="link-primary">Create Folder</a></td>
                    </tr>
                    <%}%>
            </table>
            <button id="btnCreate">Create</button>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.3.js"
        integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM=" crossorigin="anonymous"></script>
    <script src="../../public/value.js" crossorigin="anonymous"></script>
