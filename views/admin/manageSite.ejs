<head>
    <%- include('../partials/head'); %>
</head>
<header>
    <%- include('../partials/adminHeader'); %>
</header>

<div class="container">
    <div class="row">
        <h2>Manage Sites</h2>
        <div class="col-4 login">
            <form onsubmit="createSite()">
                <div class="row">
                    <div class="col form-group">
                        <input type="text" class="form-control" name="siteid" id="siteid"
                            style="visibility: hidden;width: 20px;">
                        <input type="text" class="form-control" maxlength="100" placeholder="Site Name" name="sitename"
                            id="sitename" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col form-group">
                        <div class="d-grid gap-2">
                            <input type="submit" class="btn btn-info" id="btnSubmit"
                                value="Submit">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th>Sr.No.</th>
                    <th>Site Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% for(let i=0; i < sitesList.length; i++) { %>
                    <tr>
                        <td>
                            <%= i + 1 %>
                        </td>
                        <td>
                            <%= sitesList[i].SiteName %>
                        </td>
                        <td>
                            <a href="#" onclick="editSite('<%= sitesList[i].Id %>','<%= sitesList[i].SiteName %>')"><i
                                    class="fa fa-edit fa-2x"></i></a>
                        </td>
                        <td>
                            <a href="#" onclick="deleteSite('<%= sitesList[i].Id %>')"><i
                                    class="fa fa-trash fa-2x"></i></a>
                        </td>
                    </tr>
                    <%}%>

            </table>
        </div>
    </div>
</div>
<footer>
    <%- include('../partials/footer'); %>
</footer>